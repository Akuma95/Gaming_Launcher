<UserControl x:Class="Gaming_Launcher.UC.MainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gaming_Launcher.UC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FF2F518D">
        <TabControl Background="Transparent" BorderBrush="#00ACACAC">
            <TabItem Header="Programme">
                <Grid Background="#00E5E5E5">
                    <local:UCProgramme HorizontalAlignment="Left" Height="422" VerticalAlignment="Top" Width="794"/>
                </Grid>
            </TabItem>
            <TabItem Header="Notizen">
                <Grid Background="#00E5E5E5">
                    <local:UCNotes HorizontalAlignment="Left" Height="422" VerticalAlignment="Top" Width="794"/>
                </Grid>
            </TabItem>
            <TabItem Header="Messenger">
                <Grid Background="#00E5E5E5">
                    <local:UCMessenger/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</UserControl>
